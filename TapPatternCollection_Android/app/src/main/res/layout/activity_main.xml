<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textLog"
        android:layout_width="101dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Off"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonLog"
        app:layout_constraintTop_toTopOf="@+id/buttonLog"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLog"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Log"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMark"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:text="mark"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/buttonYes"
        app:layout_constraintTop_toBottomOf="@+id/buttonNo" />

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:text="NO"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/buttonYes"
        app:layout_constraintTop_toBottomOf="@+id/buttonYes" />

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:text="Yes"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/buttonLog"
        app:layout_constraintTop_toBottomOf="@+id/buttonLog" />

    <RadioGroup
        android:id="@+id/radioGroupLog"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:checkedButton="@+id/radioTap"
        app:layout_constraintStart_toEndOf="@+id/textLog"
        app:layout_constraintTop_toTopOf="@+id/buttonLog">

        <RadioButton
            android:id="@+id/radioTap"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tap" />

        <RadioButton
            android:id="@+id/radioGesture"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gesture" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>